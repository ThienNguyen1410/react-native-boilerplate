{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./app"],
        "alias": {
          "@app" : "./app" ,
          "@core": "./app/core",
          "@data": "./app/data",
          "@domain" : "./app/domain",
          "@constants" : "./app/constants",
          "@navigation" : "./app/navigation",
          "@presetation" : "./app/presentation",
          "@assets" : "./app/presentation/assets",
          "@screens" : "./app/presentation/screens",
          "@components" : "./app/presentation/components"
        }
      }
    ]
  ]
}
